{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cp app.py /app/"
  },
  "deploy": {
    "startCommand": "cd /app && PYTHONPATH=/app python app.py",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "PORT": "8000",
    "PYTHONPATH": "/app"
  }
} 