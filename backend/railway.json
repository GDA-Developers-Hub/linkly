{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cp standalone_settings.py /app/ && cp startup.py /app/"
  },
  "deploy": {
    "startCommand": "cd /app && PYTHONPATH=/app python manage.py migrate --settings=standalone_settings && gunicorn --pythonpath /app startup:application --bind 0.0.0.0:8000",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "DJANGO_SETTINGS_MODULE": "standalone_settings",
    "PYTHONPATH": "/app",
    "DATABASE_URL": "postgresql://postgres:mmejgrkDAGJFBxRmDJkszJkkbhtGUPVv@shuttle.proxy.rlwy.net:21529/railwa"
  }
} 