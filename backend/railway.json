{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": ""
  },
  "deploy": {
    "startCommand": "python manage.py migrate && gunicorn socialbu.wsgi:application --bind 0.0.0.0:8000",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "DJANGO_SETTINGS_MODULE": "socialbu.settings",
    "PYTHONPATH": "/app"
  }
} 